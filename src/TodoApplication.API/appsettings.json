{
  "ConnectionStrings": {
    "Database": "Host=product.psql;Port=5432;Database=product;Username=postgres;Password=postgres;Include Error Detail=true",
    //"Database": "Host=host.docker.internal;Port=5432;Database=product;Username=postgres;Password=postgres;Include Error Detail=true",
    "Cache": "products.cache:6379"
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://todoapplication.seq:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "MessageBroker": {
    "Host": "amqp://todoapplication-queue:5672",
    "UserName": "guest",
    "Password": "guest"
  }
}
